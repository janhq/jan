      { opacity: 0, x: -50, rotationY: 15 },
      {
        opacity: 1,
        x: 0,
        rotationY: 0,
        duration: 0.8,
        stagger: 0.2,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: '.architecture-diagram',
          start: 'top 80%',
          once: true
        }
      }
    );

