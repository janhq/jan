<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Platform robot hover animations
    const platformRobots = document.querySelectorAll('.platform-robot');

    platformRobots.forEach(robot => {
      robot.addEventListener('mouseenter', () => {
        robot.classList.add('hover-animation');
        setTimeout(() => {
          robot.classList.remove('hover-animation');
        }, 800);
      });
    });

    // Mobile modes interaction
    const modeCards = document.querySelectorAll('.mode-card');

    modeCards.forEach(card => {
      card.addEventListener('click', () => {
        // Remove active from all cards
        modeCards.forEach(c => c.classList.remove('active'));
        // Add active to clicked card
        card.classList.add('active');

        // Animate the mini robot
        const miniRobot = card.querySelector('.mode-robot-mini');
        if (miniRobot) {
          miniRobot.style.animation = 'bounce 0.6s ease-in-out';
          setTimeout(() => {
            miniRobot.style.animation = '';
          }, 600);
        }
      });
    });

    // Platform timeline scroll animation
    const platformItems = document.querySelectorAll('.platform-item');

    const observerOptions = {
      threshold: 0.3,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animation = 'slideInFromRight 0.8s ease-out forwards';

          // Stagger the robot animation
          const robot = entry.target.querySelector('.platform-robot');
          if (robot) {
            setTimeout(() => {
              robot.style.animation = 'bounce 0.6s ease-in-out';
            }, 400);
          }
        }
      });
    }, observerOptions);

    platformItems.forEach(item => {
      observer.observe(item);
    });

    // Comparison row hover effects
    const comparisonRows = document.querySelectorAll('.comparison-row');

    comparisonRows.forEach(row => {
      row.addEventListener('mouseenter', () => {
        row.style.background = 'var(--light-blue)';
        row.style.transform = 'translateX(8px)';
      });

      row.addEventListener('mouseleave', () => {
        row.style.background = 'white';
        row.style.transform = 'translateX(0)';
      });
    });

    // Auto-select first mobile mode
    const firstModeCard = document.querySelector('.mode-card');
    if (firstModeCard) {
      firstModeCard.classList.add('active');
    }
  });
</script>
