<style>
  @import '/src/styles/products-platforms.css';

  /* Desktop Robot - Powerful Workstation */
  .desktop-robot .robot-head.powerful {
    background: linear-gradient(135deg, #1A1A2E 0%, #16213E 100%);
    box-shadow: 0 0 30px rgba(58, 134, 255, 0.5);
  }

  .robot-muscles {
    position: absolute;
    top: 10px;
    width: 100%;
    display: flex;
    justify-content: space-between;
    padding: 0 5px;
  }

  .muscle {
    width: 12px;
    height: 20px;
    background: linear-gradient(180deg, #3A86FF 0%, #1A1A2E 100%);
    border-radius: 6px;
    border: 2px solid var(--robot-dark);
    animation: muscleFlex 3s ease-in-out infinite;
  }

  .muscle.right { animation-delay: 1.5s; }

  .robot-screen.ultra-wide {
    width: 50px;
    height: 25px;
    background: #000;
    border: 3px solid #3A86FF;
    box-shadow: 0 0 20px rgba(58, 134, 255, 0.6);
  }

  .code-line.active {
    height: 2px;
    background: #06FFA5;
    margin: 2px 4px;
    animation: codePulse 2s ease-in-out infinite;
  }

  .gpu-indicator {
    position: absolute;
    bottom: 2px;
    right: 2px;
    font-size: 6px;
    color: #FFB700;
    font-weight: bold;
  }

  .robot-body.muscular {
    background: linear-gradient(135deg, #2D3561 0%, #1A1A2E 100%);
  }

  .robot-chest-display {
    padding: 10px;
  }

  .power-meter {
    display: flex;
    gap: 2px;
  }

  .power-bar {
    width: 4px;
    height: 20px;
    background: #06FFA5;
    border-radius: 2px;
    animation: powerPulse 1s ease-in-out infinite;
  }

  .power-bar:nth-child(2) { animation-delay: 0.3s; }
  .power-bar:nth-child(3) { animation-delay: 0.6s; }

  .robot-keyboard.mechanical {
    display: flex;
    gap: 2px;
    padding: 0 10px;
  }

  .key.rgb {
    width: 8px;
    height: 6px;
    background: linear-gradient(45deg, #FF006E, #3A86FF, #06FFA5);
    animation: rgbCycle 3s linear infinite;
  }

  .robot-badge.strong {
    position: absolute;
    bottom: 5px;
    right: 5px;
    font-size: 16px;
  }

  .cooling-vents {
    display: flex;
    gap: 4px;
    justify-content: center;
    margin-top: 4px;
  }

  .vent {
    width: 15px;
    height: 2px;
    background: #3A86FF;
    opacity: 0.6;
  }

  /* Web Robot - Cloud Native */
  .web-robot .robot-head.light-weight {
    background: linear-gradient(135deg, #E8F4FF 0%, #FFE8F0 100%);
    border-color: #3A86FF;
  }

  .robot-cloud-hair {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: -5px;
  }

  .cloud-puff {
    width: 20px;
    height: 15px;
    background: white;
    border: 2px solid var(--robot-dark);
    border-radius: 50%;
    animation: cloudBob 4s ease-in-out infinite;
  }

  .cloud-puff:nth-child(2) {
    width: 25px;
    height: 20px;
    margin-top: -5px;
    animation-delay: 0.5s;
  }
  .cloud-puff:nth-child(3) { animation-delay: 1s; }

  .robot-browser.floating {
    animation: browserFloat 5s ease-in-out infinite;
  }

  .url-bar {
    background: white;
    margin: 2px;
    padding: 1px 4px;
    font-size: 6px;
    border-radius: 2px;
  }

  .content-line.flowing {
    animation: dataFlow 2s linear infinite;
  }

  .robot-body.ethereal {
    background: linear-gradient(135deg, rgba(58, 134, 255, 0.2) 0%, rgba(0, 245, 255, 0.2) 100%);
    border-style: dashed;
  }

  .cloud-data.flowing {
    position: relative;
  }

  .data-stream {
    width: 2px;
    height: 8px;
    background: #3A86FF;
    margin: 1px;
    animation: streamFlow 1s linear infinite;
  }

  .wifi-signals {
    position: absolute;
    top: 10px;
    right: -20px;
  }

  .signal.wave {
    width: 20px;
    height: 20px;
    border: 2px solid #00F5FF;
    border-radius: 50%;
    position: absolute;
    animation: wifiPulse 2s ease-out infinite;
  }

  .signal.wave:nth-child(2) {
    animation-delay: 0.5s;
    opacity: 0.6;
  }

  .signal.wave:nth-child(3) {
    animation-delay: 1s;
    opacity: 0.3;
  }

  .robot-wings {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 40px;
  }

  .wing {
    width: 20px;
