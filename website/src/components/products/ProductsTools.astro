<style>
  @import '/src/styles/products-tools.css';

  /* Detective Search Robot */
  .detective-hat {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    width: 50px;
    height: 20px;
    background: #4A4E69;
    border: 2px solid var(--robot-dark);
    border-radius: 10px 10px 0 0;
  }

  .hat-band {
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 8px;
    background: var(--robot-dark);
    border-radius: 2px;
  }

  .robot-monocle {
    position: absolute;
    right: -10px;
    top: 20px;
  }

  .monocle-glass {
    width: 20px;
    height: 20px;
    border: 3px solid #FFB700;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.8);
  }

  .monocle-chain {
    position: absolute;
    top: 20px;
    right: 10px;
    width: 20px;
    height: 30px;
    border-right: 2px solid #FFB700;
    border-bottom: 2px solid #FFB700;
    border-radius: 0 0 20px 0;
  }

  .robot-eye.scanning-left {
    animation: scanLeft 3s ease-in-out infinite;
  }

  .robot-eye.scanning-right {
    animation: scanRight 3s ease-in-out infinite;
  }

  @keyframes scanLeft {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(-3px); }
  }

  @keyframes scanRight {
    0%, 100% { transform: translateX(0); }
    50% { transform: translateX(3px); }
  }

  .search-wave.rainbow {
    background: linear-gradient(90deg, #FF006E, #3A86FF, #06FFA5, #FFB700);
    animation: rainbowFlow 2s linear infinite;
  }

  .search-sparkles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .search-sparkles .sparkle {
    position: absolute;
    animation: sparkleFloat 2s ease-in-out infinite;
  }

  .search-sparkles .sparkle:nth-child(1) {
    top: 20%;
    left: 20%;
  }

  .search-sparkles .sparkle:nth-child(2) {
    bottom: 20%;
    right: 20%;
    animation-delay: 1s;
  }

  .magnifier-glass.sparkling {
    animation: magnifierSparkle 3s ease-in-out infinite;
  }

  @keyframes magnifierSparkle {
    0%, 100% { box-shadow: 0 0 10px rgba(255, 183, 0, 0.5); }
    50% { box-shadow: 0 0 20px rgba(255, 183, 0, 0.8); }
  }

  /* Scientist Research Robot */
  .scientist-hair {
    position: absolute;
    top: -10px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 5px;
  }

  .hair-spike {
    width: 8px;
    height: 15px;
    background: #8338EC;
    clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
  }

  .hair-spike.wild {
    height: 20px;
    animation: hairFloat 2s ease-in-out infinite;
  }

  .lab-goggles {
    position: absolute;
    top: 15px;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .goggle-frame {
    width: 22px;
    height: 22px;
    border: 3px solid var(--robot-dark);
    border-radius: 50%;
    background: rgba(6, 255, 165, 0.3);
  }

  .goggle-strap {
    width: 8px;
    height: 3px;
    background: var(--robot-dark);
  }

  .floating-books {
    position: absolute;
    top: -20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
  }

  .book.floating {
    font-size: 16px;
    animation: bookFloat 3s ease-in-out infinite;
  }

  .book.floating:nth-child(2) { animation-delay: 1s; }
  .book.floating:nth-child(3) { animation-delay: 2s; }

  @keyframes bookFloat {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(10deg); }
  }

  .hologram-display {
    position: absolute;
    inset: 10px;
    background: linear-gradient(135deg, rgba(131, 56, 236, 0.1), rgba(6, 255, 165, 0.1));
    border-radius: 4px;
    animation: hologramFlicker 4s ease-in-out infinite;
  }

  @keyframes hologramFlicker {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .lab-coat {
    position: absolute;
    bottom: 0;
    left: -5px;
    right: -5px;
    height: 30px;
    background: white;
    border: 2px solid var(--robot-dark);
    border-radius: 0 0 8px 8px;
  }

  .coat-pocket {
    position: absolute;
    top: 5px;
    right: 5px;
    display: flex;
    gap: 2px;
  }

  /* Pilot Browser Robot */
