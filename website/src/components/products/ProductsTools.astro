<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Tool robot hover animations
    const toolRobots = document.querySelectorAll('.tool-robot');

    toolRobots.forEach(robot => {
      robot.addEventListener('mouseenter', () => {
        if (!robot.classList.contains('sleeping')) {
          robot.style.animation = 'toolBounce 0.6s ease-in-out';
          setTimeout(() => {
            robot.style.animation = '';
          }, 600);
        } else {
          // Special animation for sleeping agent robot
          robot.style.animation = 'sleepShift 0.8s ease-in-out';
          setTimeout(() => {
            robot.style.animation = '';
          }, 800);
        }
      });
    });

    // Tool card click interactions
    const toolCards = document.querySelectorAll('.tool-card');
    toolCards.forEach(card => {
      card.addEventListener('click', () => {
        // Add a subtle click effect
        card.style.transform = 'scale(0.98)';
        setTimeout(() => {
          card.style.transform = '';
        }, 150);
      });
    });

    // Integration flow animation
    const flowSteps = document.querySelectorAll('.flow-step');
    const observerOptions = {
      threshold: 0.5,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Animate flow steps sequentially
          flowSteps.forEach((step, index) => {
            setTimeout(() => {
              step.style.animation = 'fadeInUp 0.6s ease-out forwards';

              // Animate the mini robot
              const miniRobot = step.querySelector('.robot-mini');
              if (miniRobot) {
                setTimeout(() => {
                  miniRobot.style.animation = 'miniRobotSpin 0.8s ease-in-out';
                }, 200);
              }
            }, index * 200);
          });
        }
      });
    }, observerOptions);

    const integrationFlow = document.querySelector('.integration-flow');
    if (integrationFlow) {
      observer.observe(integrationFlow);
    }

    // Tool comparison row hover effects
    const comparisonRows = document.querySelectorAll('.table-row');
    comparisonRows.forEach(row => {
      row.addEventListener('mouseenter', () => {
        row.style.background = 'var(--light-blue)';
        row.style.transform = 'translateX(4px)';

        // Animate the tool icon
        const toolIcon = row.querySelector('.tool-mini-icon');
        if (toolIcon) {
          toolIcon.style.animation = 'iconPulse 0.4s ease-in-out';
        }
      });

      row.addEventListener('mouseleave', () => {
        row.style.background = 'white';
        row.style.transform = 'translateX(0)';

        const toolIcon = row.querySelector('.tool-mini-icon');
        if (toolIcon) {
          toolIcon.style.animation = '';
        }
      });
    });

    // Feature item hover effects
    const featureItems = document.querySelectorAll('.feature-item');
    featureItems.forEach(item => {
      item.addEventListener('mouseenter', () => {
        if (!item.classList.contains('coming')) {
          const icon = item.querySelector('.feature-icon');
          if (icon) {
            icon.style.animation = 'featureIconBounce 0.4s ease-in-out';
          }
        }
      });

      item.addEventListener('mouseleave', () => {
        const icon = item.querySelector('.feature-icon');
        if (icon) {
          icon.style.animation = '';
        }
      });
    });

    // Animate tool cards when they come into view
    const toolCardsObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animation = 'slideInFromBottom 0.8s ease-out forwards';
        }
      });
    }, { threshold: 0.2 });

    toolCards.forEach(card => {
      toolCardsObserver.observe(card);
    });
  });
</script>
