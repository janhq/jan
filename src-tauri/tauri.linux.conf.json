{
  "app": {
    "security": {
      "capabilities": [
        "desktop",
        "system-monitor-window",
        "log-app-window",
        "logs-window"
      ]
    }
  },
  "bundle": {
    "targets": ["deb", "appimage"],
    "resources": ["resources/pre-install/**/*"],
    "externalBin": ["resources/bin/uv"],
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "files": {
          "usr/bin/bun": "resources/bin/bun"
        }
      }
    }
  }
}
