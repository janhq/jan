{
  "app": {
    "security": {
      "capabilities": [
        "desktop",
        "system-monitor-window",
        "log-app-window",
        "logs-window"
      ]
    }
  },

  "bundle": {
    "targets": ["nsis", "msi"],
    "resources": [
      "resources/pre-install/**/*",
      "resources/lib/vc_redist.x64.exe",
      "resources/LICENSE"
    ],
    "externalBin": ["resources/bin/bun", "resources/bin/uv"],
    "windows": {
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    }
  }
}
